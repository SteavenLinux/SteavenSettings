#!/usr/bin/env bash

# Set common environment variables
export __GL_SHADER_DISK_CACHE=1
export __GL_SHADER_DISK_CACHE_SIZE=100000000000
export __GL_SHADER_DISK_CACHE_SKIP_CLEANUP=1
export __GL_SYNC_TO_VBLANK=1
export OBS_VKCAPTURE=1
export ENABLE_VKBASALT=1
export DXVK_HUD=compiler
export PROTON_XESS_UPGRADE=1
export PROTON_DLSS_UPGRADE=1
export PROTON_FSR3_UPGRADE=1
export PROTON_FSR4_UPGRADE=1
export PROTON_FSR4_RDNA3_UPGRADE=1

# Check for flags
NO_MANGOHUD=0
ENABLE_VSYNC=0
CLEAN_ARGS=()

for arg in "$@"; do
    case "$arg" in
        --no-mangohud)
            NO_MANGOHUD=1
            ;;
        --vsync)
            ENABLE_VSYNC=1
            ;;
        *)
            CLEAN_ARGS+=("$arg")
            ;;
    esac
done

# Apply vsync settings if the flag is enabled
if [ "$ENABLE_VSYNC" -eq 1 ]; then
    export STRANGLE_VSYNC=2
    VSYNC_CMD="strangle -v 2"
else
    VSYNC_CMD=""
fi

# Adjust MANGOHUD based on the flag
if [ "$NO_MANGOHUD" -eq 1 ]; then
    export MANGOHUD=0
    exec gamemoderun $VSYNC_CMD "${CLEAN_ARGS[@]}"
else
    export MANGOHUD=1
    exec mangohud gamemoderun $VSYNC_CMD "${CLEAN_ARGS[@]}"
fi